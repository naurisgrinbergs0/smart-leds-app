<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowItemRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowItemRowLayout"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <ProgressBar
            android:id="@+id/PB_connectDevice"
            style="?android:attr/progressBarStyle"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="sans-serif-light"
            android:text="Device Name"
            android:textAlignment="center"
            android:textColor="@color/light"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-light"
            android:text="Tap to connect"
            android:textColor="@color/light_charm"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/dd_name"
            app:layout_constraintStart_toStartOf="@+id/dd_name"
            app:layout_constraintTop_toBottomOf="@+id/dd_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>